{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "pixie.schema.json",
  "title": "ARPG Pixie Definition",
  "description": "Schema for defining passive companion creatures (treated as passive skills)",
  "type": "object",
  "required": ["id", "name", "buff"],
  
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z_]+$",
      "description": "Unique identifier"
    },
    "name": {
      "type": "string",
      "description": "Display name"
    },
    "description": {
      "type": "string",
      "description": "Tooltip text"
    },
    
    "element": {
      "type": "string",
      "description": "Element ID for visuals"
    },
    
    "buff": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["healthRegen", "manaRegen", "maxHealth", "maxMana", "armor", "spellPower", "attackPower", "critChance", "moveSpeed"]
        },
        "value": { "type": "number" }
      },
      "required": ["type", "value"],
      "description": "Passive stat bonus while equipped"
    },
    
    "visual": {
      "type": "object",
      "properties": {
        "color": { "type": "string", "pattern": "^#[0-9a-fA-F]{6}$" },
        "glowColor": { "type": "string", "pattern": "^#[0-9a-fA-F]{6}$" },
        "icon": { "type": "string" },
        "model": { "type": "string" },
        "orbitRadius": { "type": "number" },
        "orbitSpeed": { "type": "number" },
        "scale": { "type": "number" }
      }
    },
    
    "restrictions": {
      "type": "object",
      "properties": {
        "classes": {
          "type": ["array", "null"],
          "items": { "type": "string" }
        },
        "minLevel": { "type": "integer", "minimum": 1 }
      }
    },
    
    "lore": {
      "type": "object",
      "properties": {
        "origin": { "type": "string" },
        "personality": { "type": "string" }
      }
    },
    
    "tags": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Classification tags"
    }
  }
}
